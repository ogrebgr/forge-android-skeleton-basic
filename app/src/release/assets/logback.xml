<!--suppress XmlUnboundNsPrefix, XmlUnboundNsPrefix -->
<configuration>
    <appender
        name="LOGCAT"
        class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder>
            <pattern>%logger{0}</pattern>
        </tagEncoder>
        <encoder>
            <pattern>+skel %msg%n</pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="LOGCAT"/>
    </root>
</configuration>
